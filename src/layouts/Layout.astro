---
interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/app.css";
import "@fontsource-variable/public-sans";
---

<!doctype html>
<html lang="es" data-theme="emerald">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="flex min-h-screen flex-col">
        <main class="svg-bg flex grow flex-col gap-4 p-4">
            <slot />
        </main>

        <footer class="footer bg-base-200 p-10 text-base-content">
            <aside>
                <img
                    class="h-14 w-14"
                    src="/logo_transparent.svg"
                    alt="Open Source Usach logo"
                />
                <h1 class="text-3xl font-bold">Open Source USACH</h1>
            </aside>
            <nav>
                <h6 class="footer-title text-xl">osusach</h6>
                <a href="https://www.osusach.com/" class="link-hover link"
                    >Website</a
                >
                <a href="https://github.com/osusach/" class="link-hover link"
                    >Github</a
                >
                <a
                    href="https://github.com/osusach/calculadora-de-notas"
                    class="link-hover link">Git del proyecto</a
                >
            </nav>
            <nav>
                <h6 class="footer-title text-xl">Desarrolladores</h6>
                <a href="https://github.com/Skyrdow/" class="link-hover link"
                    >Lucas Mesias</a
                >
            </nav>
        </footer>
    </body>
</html>
